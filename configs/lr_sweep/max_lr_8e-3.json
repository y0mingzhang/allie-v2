{
    "distributed": {
        "tp_size": 1,
        "cp_size": 1,
        "pp_size": 1,
        "dp_size": 2,
        "backend": "nccl",
        "use_cpu": false
    },
    "model": {
        "name": "Qwen/Qwen3-1.7B",
        "use_flash_attention": true,
        "use_fused_adam": true,
        "vocab_size": 2350,
        "max_position_embeddings": 1024
    },
    "training": {
        "seed": 42,
        "total_train_steps": 1000,
        "seq_length": 1024,
        "micro_batch_size": 48,
        "gradient_accumulation_steps": 2,
        "max_tokens": null,
        "grad_clip_norm": 1.5,
        "torch_compile": true,
        "optimizer": {
            "name": "muon",
            "weight_decay": 0.05,
            "momentum": 0.9,
            "ns_coefficients": [3.4445, -4.775, 2.0315],
            "ns_steps": 5,
            "adjust_lr_fn": "match_rms_adamw",
            "muon_eps": 1e-7
        },
        "lr_schedule": {
            "type": "warmup_stable_decay",
            "warmup_steps": 20,
            "stable_steps": 880,
            "decay_steps": 100,
            "max_lr": 0.008,
            "min_lr": 0.0004
        }
    },
    "dataset": {
        "name": "tokens",
        "train_glob": "data/tokens/**/train.npy",
        "val_glob": "data/tokens/**/val.npy",
        "num_workers": 4
    },
    "validation": {
        "every_steps": 200,
        "num_samples": 4096
    },
    "checkpoint": {
        "save_dir": "models/lr_sweep/qwen3-1.7b-lr-8e-3",
        "save_frequency": 1000,
        "load_path": ""
    },
    "logging": {
        "use_wandb": true,
        "project_name": "chess-v2",
        "run_name": "lr_sweep/qwen3-1.7b-lr-8e-3"
    },
    "environment": {
        "OMP_NUM_THREADS": "2",
        "TOKENIZERS_PARALLELISM": "false",
        "FLASH_ATTEN": "1"
    }
}

