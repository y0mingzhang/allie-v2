token: "?"  # Lichess OAuth2 Token
url: "https://lichess.org/"          # Lichess base URL

engine:                              # Engine settings
  dir: "./"                         # Directory containing the engine
  name: "vllm_engine"               # Name of our VLLM engine
  protocol: "homemade"              # Use homemade protocol for our custom engine
  ponder: false                     # Disable pondering for simplicity

  homemade_options:
    # No special options needed for our VLLM engine

  silence_stderr: false             # Keep stderr for debugging

abort_time: 60                      # Time to abort a game in seconds when there is no activity
fake_think_time: true              # Don't artificially slow down
rate_limiting_delay: 300            # 0.3s delay between moves
move_overhead: 2000                 # Buffer time for move processing
max_takebacks_accepted: 0           # Don't allow takebacks
quit_after_all_games_finish: false # Allow immediate quit

challenge:                          # Incoming challenge settings
  concurrency: 50                   # Play up to 50 games simultaneously
  sort_by: "best"                   # Take best challenges first
  preference: "human"               # Prefer human opponents
  accept_bot: false                 # Don't accept challenges from bots
  only_bot: false                   # Only accept human challenges
  max_increment: 180                # Accept up to 3 minute increment
  min_increment: 0                  # No minimum increment
  max_base: 10800                   # Accept up to 3 hour base time
  min_base: 0                      # Minimum 15 seconds base time
  max_days: .inf                      # Max correspondence days
  min_days: 0                       # Min correspondence days
  variants:                         # Only play standard chess
    - standard
  time_controls:                    # Accept these time controls
    - bullet
    - blitz
    - rapid
    - classical
    - correspondence
  modes:                            # Accept both casual and rated
    - casual
    - rated
  bullet_requires_increment: false  # Allow bullet without increment
  max_simultaneous_games_per_user: 5 # Max games per opponent
  block_list: []                    # Blocked usernames
  allow_list: []                    # If non-empty, only accept from these users

greeting:
  hello: ""
  goodbye: ""
  hello_spectators: ""
  goodbye_spectators: ""

matchmaking:
  allow_matchmaking: false          # Don't actively seek games for now

correspondence:
  move_time: 60                     # 1 minute thinking time for correspondence
  checkin_period: 300               # Check every 5 minutes
  disconnect_time: 150              # Disconnect after 2.5 minutes
  ponder: false                     # No pondering in correspondence
